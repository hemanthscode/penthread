{
  "info": {
    "_postman_id": "auth-module-collection-2025",
    "name": "BlogPlatform Auth Module",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for BlogPlatform Auth API endpoints with automated token handling"
  },
  "item": [
    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{base_url}}/auth/register",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"New User\",\n  \"email\": \"new.user@blog.com\",\n  \"password\": \"User@123\"\n}"
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status is 201 Created\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "// Register does not set tokens, just confirm success",
              "console.log('✅ Registered new user');"
            ]
          }
        }
      ]
    },
    {
      "name": "Login - Admin",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{base_url}}/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"{{admin_email}}\",\"password\":\"{{admin_password}}\"}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Login successful\", function () {",
              "    pm.response.to.have.status(200);",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.tokens).to.have.property('accessToken');",
              "});",
              "",
              "// Save tokens in environment",
              "var jsonData = pm.response.json();",
              "pm.environment.set(\"admin_access_token\", jsonData.tokens.accessToken);",
              "pm.environment.set(\"admin_refresh_token\", jsonData.tokens.refreshToken);",
              "pm.environment.set(\"active_access_token\", jsonData.tokens.accessToken);",
              "pm.environment.set(\"active_refresh_token\", jsonData.tokens.refreshToken);",
              "console.log('✅ Admin tokens saved');"
            ]
          }
        }
      ]
    },
    {
      "name": "Login - Author",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{base_url}}/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"{{author_email}}\",\"password\":\"{{author_password}}\"}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Login successful\", function () {",
              "    pm.response.to.have.status(200);",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.tokens).to.have.property('accessToken');",
              "});",
              "",
              "// Save tokens in environment",
              "var jsonData = pm.response.json();",
              "pm.environment.set(\"author_access_token\", jsonData.tokens.accessToken);",
              "pm.environment.set(\"author_refresh_token\", jsonData.tokens.refreshToken);"
            ]
          }
        }
      ]
    },
    {
      "name": "Login - User",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{base_url}}/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"{{user_email}}\",\"password\":\"{{user_password}}\"}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Login successful\", function () {",
              "    pm.response.to.have.status(200);",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.tokens).to.have.property('accessToken');",
              "});",
              "",
              "// Save tokens in environment",
              "var jsonData = pm.response.json();",
              "pm.environment.set(\"user_access_token\", jsonData.tokens.accessToken);",
              "pm.environment.set(\"user_refresh_token\", jsonData.tokens.refreshToken);"
            ]
          }
        }
      ]
    },
    {
      "name": "Refresh Token",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{base_url}}/auth/refresh",
        "body": {
          "mode": "raw",
          "raw": "{\"refreshToken\":\"{{active_refresh_token}}\"}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    var jsonData = pm.response.json();",
              "    pm.environment.set(\"active_access_token\", jsonData.accessToken);",
              "    pm.environment.set(\"active_refresh_token\", jsonData.refreshToken);",
              "    console.log('♻️ Token refreshed');",
              "} else {",
              "    console.warn('Failed to refresh token');",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Get Profile",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{active_access_token}}"
          }
        ],
        "url": "{{base_url}}/auth/me"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Profile fetched successfully', function () {",
              "    pm.response.to.have.status(200);",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('email');",
              "    pm.expect(jsonData).to.have.property('role');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Logout",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{active_access_token}}"
          }
        ],
        "url": "{{base_url}}/auth/logout"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Logout success', function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Forgot Password",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{base_url}}/auth/forgot-password",
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"{{user_email}}\"}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Forgot password request success', function () {",
              "    pm.response.to.have.status(200);",
              "    var jsonData = pm.response.json();",
              "    pm.environment.set('reset_token', jsonData.resetToken);",
              "    console.log('Password reset token saved');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Reset Password",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{base_url}}/auth/reset-password",
        "body": {
          "mode": "raw",
          "raw": "{\"token\":\"{{reset_token}}\",\"password\":\"NewPass@123\"}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Password reset success', function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Change Password",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{active_access_token}}" }
        ],
        "url": "{{base_url}}/auth/change-password",
        "body": {
          "mode": "raw",
          "raw": "{\"currentPassword\":\"User@123\",\"newPassword\":\"NewPass@123\"}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Password change success', function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ]
          }
        }
      ]
    }
  ]
}
