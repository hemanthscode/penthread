          "name": "1. Create Category - Technology",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 201', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Category created successfully', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.success).to.be.true;",
                  "    pm.expect(jsonData.data.name).to.eql('Technology');",
                  "});",
                  "",
                  "pm.test('Save category ID and slug', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.environment.set('categoryTechId', jsonData.data._id);",
                  "    pm.environment.set('categoryTechSlug', jsonData.data.slug);",
                  "});",
                  "",
                  "pm.test('Slug is auto-generated', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data.slug).to.eql('technology');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
