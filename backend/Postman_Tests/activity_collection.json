{
  "info": {
    "_postman_id": "activity-module-collection-2025",
    "name": "BlogPlatform Activity Module",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for BlogPlatform Activity endpoints (user action logs)"
  },
  "item": [
    {
      "name": "Get My Activities (User)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{user_access_token}}" }
        ],
        "url": "{{base_url}}/activity"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('User activities fetched', function () { pm.response.to.have.status(200); });",
              "const activities = pm.response.json();",
              "pm.expect(Array.isArray(activities)).to.be.true;"
            ]
          }
        }
      ]
    },
    {
      "name": "Get My Activities (Author)",
      "request": {
