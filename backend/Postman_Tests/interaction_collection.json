{
  "info": {
    "_postman_id": "interactions-module-collection-2025",
    "name": "BlogPlatform Interactions Module",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for BlogPlatform Interactions API endpoints (likes, favorites, views)"
  },
  "item": [
    {
      "name": "Like Post (User)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{user_access_token}}" }
        ],
        "url": "{{base_url}}/interactions/{{latest_post_id}}/like"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Post liked', function () { pm.response.to.have.status(200); });",
              "var res = pm.response.json();",
              "pm.expect(res.liked).to.be.true;"
            ]
          }
        }
      ]
    },
    {
      "name": "Unlike Post (User)",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{user_access_token}}" }
        ],
        "url": "{{base_url}}/interactions/{{latest_post_id}}/like"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Post unliked', function () { pm.response.to.have.status(200); });",
              "var res = pm.response.json();",
              "pm.expect(res.liked).to.be.false;"
            ]
          }
        }
      ]
    },
    {
      "name": "Favorite Post (User)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{user_access_token}}" }
        ],
        "url": "{{base_url}}/interactions/{{latest_post_id}}/favorite"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Post favorited', function () { pm.response.to.have.status(200); });",
              "var res = pm.response.json();",
              "pm.expect(res.favorited).to.be.true;"
            ]
          }
        }
      ]
    },
    {
      "name": "Unfavorite Post (User)",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{user_access_token}}" }
        ],
        "url": "{{base_url}}/interactions/{{latest_post_id}}/favorite"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Post unfavorited', function () { pm.response.to.have.status(200); });",
              "var res = pm.response.json();",
              "pm.expect(res.favorited).to.be.false;"
            ]
          }
        }
      ]
    },
    {
      "name": "View Post (Public)",
      "request": {
        "method": "POST",
        "url": "{{base_url}}/interactions/{{latest_post_id}}/view"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('View recorded', function () { pm.response.to.have.status(200); });",
              "pm.expect(pm.response.json().message).to.include('View recorded');"
            ]
          }
        }
      ]
    }
  ]
}
